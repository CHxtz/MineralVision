.container-image{
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
  }
  .image{
    margin-left:50rpx;
  }
  .detail{
    display: flex;
    flex-direction: row;
  }
  .information{
    background-color:#F9F9F9;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    margin-left: 25rpx;
    width: 100%;
    height:60rpx;
  }
  .sub{
    font-size: 28rpx;
    margin-top: 20rpx;
  }
  .arr{
    background-color:#fff;
    display: flex;
    flex-direction: row;
  }
.hr{
    margin-top: 45rpx;
    height: 1px;
    width: 100%;
    background-color: #d9d9d9;
}
.synopsis{
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
}
.summary-content{
    margin-top: 20rpx;
    margin-right: 40rpx;
    line-height: 40rpx;
    letter-spacing: 1px;
}
.synopsis-font{
    color: #999;
}
.cast{
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
}
.cast-font{
    color:#999;
    margin-bottom:40rpx
}
.cast-container{
    display: inline-flex;
    flex-direction: column;
    margin-bottom: 50rpx;
    margin-right: 40rpx;
    width: 300rpx;
    text-align: center;
    white-space: normal
}
.cast-imgs{
    white-space: nowrap;
}
.cast-img{
    height: 210rpx;
    width: 300rpx;
}
.cast-name{
    margin: 10rpx auto 0;
    /*word-break: break-all;*/
}